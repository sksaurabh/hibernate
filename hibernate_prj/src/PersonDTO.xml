<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.om.saurabh.hib.dto.PersonDTO" table="PERSON_TABLE">
		<id name="id" column="P_ID">
			<generator class="increment" />
		</id>
		<property name="name" column="P_NAME" />
		<property name="email" column="P_EMAIL" />
		<property name="age" column="P_AGE" />
		<property name="address" column="P_ADDRESS"></property>
	</class>
</hibernate-mapping>